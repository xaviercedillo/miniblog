{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <h1>Minipost creation</h1>

    {{ form_start(form) }}
        <div class="form-group">
        {{ form_row(form.title) }}
        </div>
        <div class="form-group">
        {{ form_row(form.content) }}
        </div>
        
        <div class="form-group">
        {{ form_row(form.category) }}
        </div>
        <div class="form-group">
        {{ form_row(form.user) }}
        </div> 
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
</div>

<br/>

<div class="row">
  <a href="{{ path('minipost_index') }}">Back to the list</a>
</div>

            
{% endblock %}






