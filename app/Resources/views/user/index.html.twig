{% extends 'base.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/miniblog/js/user/index.js') }}"></script>
{% endblock %}
{% block body %}
    <h1>User list</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                
                <th>Nombre</th>
                <th>Biografia</th>
                <th>Email</th>
                <th>AÃ±o de nacimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                
                <td>{{ user.name }}</td>
                <td>{{ user.biography }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.birthdate %}{{ user.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a class="showUser" href="{{ path('user_show_modal', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
    <div id="myModal" class="modal fade"></div>
{% endblock %}
